<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name></display-name>
	<servlet>
		<servlet-name>ssoauth</servlet-name>
		<servlet-class>cn.heroes.sso.server.servlet.SSOAuthServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ssoauth</servlet-name>
		<url-pattern>/ssoauth</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>client</filter-name>
		<filter-class>cn.heroes.sso.client.filter.SSOClientFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>client</filter-name>
		<url-pattern>/test/*</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
